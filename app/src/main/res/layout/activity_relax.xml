<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isidrojacinto.xcube.relax"
    android:background="#90EE90">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:id="@+id/searchView3" />

    <Button
        android:id="@+id/button14"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:onClick="eat"
        android:text="eat" />

    <Button
        android:id="@+id/button17"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:onClick="play"
        android:text="PLAY " />

    <Button
        android:id="@+id/button18"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light"
        android:text="RELAX" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ace"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/searchView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ace"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="ACE WATER SPA"
        android:textSize="10pt"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:textSize="5pt"
        android:text='What is Ace Water Spa? ACE Water Spa traces back its concept to word SPA - derived from the Latin Phrase "Salus per Aquam" or "Sanitus per Aquam" meaning Health through Water. Since then, Water has been a vital element in cleansing, relaxing and healing because its curative properties. In England, back in the 16th century, the Romans came up with an idea to undergo "medicinal bathing" to soothe and treat body illnesses by the roman soldiers, thus hydrotherapy was born.' />
</RelativeLayout>
